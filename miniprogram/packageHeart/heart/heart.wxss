/* pages/heart.wxss */
.main {
  width: 100%;
}

.realtime {
  padding: 40rpx;
  margin: 20rpx;
}

.rate {
  display: flex;
  flex-direction: row;
  align-items: baseline;
}

.value {
  font-size: 48rpx;
  font-weight: 700;
  margin-right: 10rpx;
  margin-left: 10rpx;
}

.uint {
  font-size: 30rpx;
}

.date {
  font-size: 24rpx;
  color: #888;
}

.chart {
  height: 300px;
  margin: 0 20rpx;
  display: block;
}

.card {
  background-color: #fff;
  margin: 20rpx;
  padding: 40rpx;
  border-radius: 20rpx;
}

.header {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.title {
  margin-left: 10rpx;
}

.box {

}

.row {
  margin: 20rpx 0;
  display: flex;
  flex-direction: row;
}

.block {
  height: 100rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
}

.primary {
  display: flex;
  flex-direction: row;
  align-items: baseline;
}

.primary-value {
  font-size: 40rpx;
  margin-right: 10rpx;
  font-weight: 500;
}

.primary-uint {
  font-size: 30rpx;
}

.secondary {
  display: flex;
  flex-direction: row;
  align-items: baseline;
}

.secondary-text {
  font-size: 24rpx;
  color: #888;
}

.divider {
  border-top: 3rpx solid #eee;
  margin: 10rpx 0;
}

.ratio {
  height: 40rpx;
  margin: 20rpx 0;
  display:flex;
  flex-direction: row;
}

.ratio-part {
  height:40rpx;
  margin: 0 1rpx;
}

.loader {
  height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
}