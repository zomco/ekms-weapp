<view wx:if="{{ isAvailable }}">
  <scroll-view scroll-y style="width:690rpx;height:{{list_height}}rpx">
    <van-cell-group
      wx:for="{{ devices }}" 
      wx:key="deviceId"
      border="{{ false }}"
    >
      <van-cell 
        title="{{ '设备名称: ' + item.name }}" 
        value="{{ '设备ID: ' + item.deviceId }}" 
        label="{{ '信号强度RSSI: ' + item.RSSI }}" 
        border="{{ false }}" 
      />
    </van-cell-group>
  </scroll-view>
  <van-button 
    type="primary" 
    custom-style="position:fixed;bottom:30px;left:50%;transform:translateX(-50%);" 
    loading="{{ isSearching }}" 
    loading-text="搜索中..."
    bind:click="handleSearch"
  >
    搜索蓝牙设备
  </van-button>
</view>
<view wx:else>
  请打开蓝牙
</view>
