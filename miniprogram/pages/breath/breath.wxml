<!--pages/breath/breath.wxml-->
<view class="container">
  <view class="name">呼吸频率</view>
  <view class="main">
    <view class="realtime">
      <view class="rate">
        <view class="value">{{ aggData0.mean }}</view>
        <view class="unit">次/分</view>
      </view>
      <view class="date">5 月 23 日 09:27:16</view>
    </view>
    <ec-canvas id="breath-chart" canvas-id="breath-chart" ec="{{ ec }}" class="chart"></ec-canvas>
    <view class="card">
      <view class="header">
        <t-icon prefix="mdi" name="eye-circle" size="64rpx" color="#6ad0bb" />
        <view class="title">今日概览</view>
      </view>
      <view class="divider" />
      <view class="box">
        <view class="row">
          <view class="block">
            <view class="primary">
              <view class="primary-value">{{ aggData0.max }}</view>
              <viwe class="primary-uint">次/分</viwe>
            </view>
            <view class="secondary">
              <view class="secondary-text">最高呼吸频率</view>
            </view>
          </view>
          <view class="block">
            <view class="primary">
              <view class="primary-value">{{ aggData0.min }}</view>
              <viwe class="primary-uint">次/分</viwe>
            </view>
            <view class="secondary">
              <view class="secondary-text">最低呼吸频率</view>
            </view>
          </view>
        </view>
        <view class="row">
          <view class="block">
            <view class="primary">
              <view class="primary-value">{{ aggData0.mean }}</view>
              <viwe class="primary-uint">次/分</viwe>
            </view>
            <view class="secondary">
              <view class="secondary-text">平均呼吸频率</view>
            </view>
          </view>
        </view>
      </view>
    </view>
    <view class="card">
      <view class="header">
        <t-icon prefix="mdi" name="chart-pie" size="64rpx" color="#6ad0bb" />
        <view class="title">呼吸频率区间</view>
      </view>
      <view class="divider" />
      <view class="ratio">
        <view class="ratio-part" style="{{ 'background-color:#64B3F6;width:' + aggData1.ratio + '%;' }}"></view>
        <view class="ratio-part" style="{{ 'background-color:#6BCE7A;width:' + aggData2.ratio + '%;' }}"></view>
        <view class="ratio-part" style="{{ 'background-color:#F5BD43;width:' + aggData3.ratio + '%;' }}"></view>
      </view>
      <view class="box">
        <view class="row">
          <view class="block">
            <view class="primary">
              <view class="primary-value">{{ aggData1.sum || 0 }}</view>
              <viwe class="primary-uint">分钟</viwe>
            </view>
            <view class="secondary">
              <t-icon prefix="mdi" name="square" size="20rpx" color="#64B3F6" />
              <view class="secondary-text" style="margin-left:10rpx;">呼吸较慢</view>
            </view>
          </view>
          <view class="block">
            <view class="primary">
              <view class="primary-value">{{ aggData2.sum || 0 }}</view>
              <viwe class="primary-uint">分钟</viwe>
            </view>
            <view class="secondary">
              <t-icon prefix="mdi" name="square" size="20rpx" color="#6BCE7A" />
              <view class="secondary-text" style="margin-left:10rpx;">呼吸正常</view>
            </view>
          </view>
        </view>
        <view class="row">
          <view class="block">
            <view class="primary">
              <view class="primary-value">{{ aggData3.sum || 0 }}</view>
              <viwe class="primary-uint">分钟</viwe>
            </view>
            <view class="secondary">
              <t-icon prefix="mdi" name="square" size="20rpx" color="#F5BD43" />
              <view class="secondary-text" style="margin-left:10rpx;">呼吸较快</view>
            </view>
          </view>
        </view>
      </view>
    </view>
    <view class="card">
      <view class="header" bindtap="bindRealtimeTap">
        <t-icon prefix="mdi" name="chart-line" size="64rpx" color="#6ad0bb" />
        <view class="title">实时呼吸</view>
      </view>
    </view>
  </view>
</view>
