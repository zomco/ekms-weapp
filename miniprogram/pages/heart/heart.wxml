<!--pages/heart.wxml-->
<view class="container">
  <view class="name">心率</view>
  <view class="main">
    <view class="realtime">
      <view class="rate">
        <view class="value">73</view>
        <view class="unit">次/分</view>
      </view>
      <view class="date">5 月 23 日 09:27:16</view>
    </view>
    <ec-canvas id="chart-dom" canvas-id="chart" ec="{{ ec }}" class="chart"></ec-canvas>
    <view class="card">
      <view class="header">
        <t-icon prefix="mdi" name="eye-circle" size="64rpx" color="#eb665f" />
        <view class="title">今日概览</view>
      </view>
      <view class="divider" />
      <view class="box">
        <view class="row">
          <view class="block">
            <view class="primary">
              <view class="primary-value">117</view>
              <viwe class="primary-uint">次/分</viwe>
            </view>
            <view class="secondary">
              <view class="secondary-text">最高心率</view>
            </view>
          </view>
          <view class="block">
            <view class="primary">
              <view class="primary-value">27</view>
              <viwe class="primary-uint">次/分</viwe>
            </view>
            <view class="secondary">
              <view class="secondary-text">最低心率</view>
            </view>
          </view>
        </view>
        <view class="row">
          <view class="block">
            <view class="primary">
              <view class="primary-value">27</view>
              <viwe class="primary-uint">次/分</viwe>
            </view>
            <view class="secondary">
              <view class="secondary-text">平均心率</view>
            </view>
          </view>
          <view class="block">
            <view class="primary">
              <view class="primary-value">27</view>
              <viwe class="primary-uint">次/分</viwe>
            </view>
            <view class="secondary">
              <view class="secondary-text">睡眠心率</view>
            </view>
          </view>
        </view>
      </view>
    </view>
    <view class="card">
      <view class="header">
        <t-icon prefix="mdi" name="chart-pie" size="64rpx" color="#eb665f" />
        <view class="title">心率区间</view>
      </view>
      <view class="divider" />
      <view class="ratio">
        <view class="ratio-part" style="background-color: #64B3F6;width: 25%;"></view>
        <view class="ratio-part" style="background-color: #6BCE7A;width: 5%;"></view>
        <view class="ratio-part" style="background-color: #F5BD43;width: 25%;"></view>
        <view class="ratio-part" style="background-color: #EB665F;width: 15%;"></view>
      </view>
      <view class="box">
        <view class="row">
          <view class="block">
            <view class="primary">
              <view class="primary-value">5</view>
              <viwe class="primary-uint">分钟</viwe>
            </view>
            <view class="secondary">
              <t-icon prefix="mdi" name="square" size="20rpx" color="#64B3F6" />
              <view class="secondary-text" style="margin-left:10rpx;">热身</view>
            </view>
          </view>
          <view class="block">
            <view class="primary">
              <view class="primary-value">1</view>
              <viwe class="primary-uint">分钟</viwe>
            </view>
            <view class="secondary">
              <t-icon prefix="mdi" name="square" size="20rpx" color="#6BCE7A" />
              <view class="secondary-text" style="margin-left:10rpx;">热身</view>
            </view>
          </view>
        </view>
        <view class="row">
          <view class="block">
            <view class="primary">
              <view class="primary-value">0</view>
              <viwe class="primary-uint">分钟</viwe>
            </view>
            <view class="secondary">
              <t-icon prefix="mdi" name="square" size="20rpx" color="#F5BD43" />
              <view class="secondary-text" style="margin-left:10rpx;">热身</view>
            </view>
          </view>
          <view class="block">
            <view class="primary">
              <view class="primary-value">1</view>
              <viwe class="primary-uint">分钟</viwe>
            </view>
            <view class="secondary">
              <t-icon prefix="mdi" name="square" size="20rpx" color="#EB665F" />
              <view class="secondary-text" style="margin-left:10rpx;">热身</view>
            </view>
          </view>
        </view>
      </view>
    </view>
  </view>
</view>
