<!--index.wxml-->
<view class="container">
  <view class="devices">
    <view 
      wx:for="{{devices}}" 
      wx:for-index="index" 
      wx:for-item="device"
      wx:key="index"
      class="device"
      data-id="{{device.id}}"
      data-name="{{device.name}}"
      bindtap="bindDeviceTap"
    >
      <t-icon prefix="mdi" name="radar" size="96rpx" style="margin-left: 150rpx;" color="rgba(0,0,0,0.3)" />
      <view class="content">
        <view class="name">{{device.name}}</view>
        <view class="status">{{device.status}}</view>
      </view>
    </view>
    <view class="device" style="justify-content: center;flex-direction: column;">
      <t-icon prefix="mdi" name="plus-circle" size="96rpx" color="rgba(0,0,0,0.3)" />
      <view class="description" style="color: rgba(0,0,0,0.3);">添加新设备</view>
    </view>
  </view>
</view>