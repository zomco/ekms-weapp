.header {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-bottom: 40rpx;
  align-items: center;
}

.name {
  font-weight: 500;
  font-size: 40rpx;
  margin: 0 20rpx;
}

.add {
  margin: 0 20rpx;
}

.main {
  width: 100%;
}

.box {
  margin: 0 20rpx;
}

.row {
  margin: 20rpx 0;
  display: flex;
  flex-direction: row;
}

.block {
  background-color: #fff;
  border-radius: 20rpx;
  min-height: 340rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  padding: 40rpx;
}

.title {
  margin: 10rpx 0;
}

.date {
  font-size: 24rpx;
}