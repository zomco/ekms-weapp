.header {
  width: 100%;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-bottom: 40rpx;
  align-items: center;
}

.main {
  width: 100%;
}

.box {
  margin: 0 20rpx;
}

.row {
  margin: 20rpx 0;
  display: flex;
  flex-direction: row;
}

.block {
  background-color: #fff;
  border-radius: 20rpx;
  min-height: 340rpx;
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  padding: 40rpx;
}

.cell {
  background-color: #fff;
  border-radius: 20rpx;
  min-height: 40rpx;
  flex: 1;
  display: flex;
  padding: 40rpx;
  justify-content: space-between;
}

