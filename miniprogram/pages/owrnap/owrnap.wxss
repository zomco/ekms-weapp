/* pages/owrnap/owrnap.wxss */
.canvas {
  position: absolute;
  top: 0;
  bottom: 0;
  left: 0;
  right: 0;

  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
  height: 200%;
} 
.heart-rate-canvas {
  width: 100%;
  height: 800px;
}
.breath-rate-canvas {
  width: 100%;
  height: 800px;
}
.heart-wave-canvas {
  width: 100%;
  height: 800px;
}
.breath-wave-canvas {
  width: 100%;
  height: 800px;
}

.loader {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 60vh;
}
.loader-wrapper {
  display: flex;
}

.status {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 60vh;
}