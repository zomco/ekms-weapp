.card__strech {
  height: 90vh;
}

.card-main {
  display: flex;
  flex-direction: column;
  flex: 1;
  overflow-y: scroll;
}

.card-header-title {
  font-size: 36rpx;
  font-weight: 600;
}

.card-header-action {
  font-size: 40rpx;
  margin: 0 16rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.service {
  padding: 10rpx;
}

.service-header {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

.service-header-name {
  font-size: 40rpx;
  font-weight: 400;
}

.service-header-action {
  margin-right: 16rpx;
  font-size: 48rpx;
}

.service-main {
  padding: 10rpx;
}

.characteristic {
  display: flex;
  background-color: rgba(73, 34, 82, 0.1);
  border-radius: 10rpx;
  margin: 10rpx 0;
  min-height: 100rpx;
  width: 100%;
  justify-content: center;
  flex-direction: column;
}

.characteristic-header {
  display: flex;
  align-items: center;
  flex-direction: row;
  margin: 16rpx 0;
}

.characteristic-header-icon {
  font-size: 40rpx;
  margin: 0 16rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.characteristic-header-title {
  display: flex;
  flex-direction: column;
  flex: 1;
  font-size: 32rpx;
}

.characteristic-header-actions {
  display: flex;
  flex-direction: row;
}

.characteristic-header-action {
  font-size: 40rpx;
  margin: 0 16rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.characteristic-header-action-active {
  color:  rgba(255, 179, 0, 1);
}

.characteristic-header-action-inactive {
  color:  #969799;
}

.characteristic-main {
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.characteristic-main-attr {
  font-size: 28rpx;
  margin: 10rpx 20rpx 16rpx;
}

.characteristic-main-item {
  display: flex;
  flex-direction: row-reverse;
  justify-content: space-between;
}

.characteristic-main-name {
  margin: 0 10rpx;
  flex-shrink: 0;
}

.characteristic-main-value {
  color: #666;
  max-height: 300rpx;
  max-width: 510rpx;
  word-break: break-word;
  min-height: 38rpx;
}

.write {
  display: flex;
  flex-direction: column;
  max-height: 80vh;
}

.write-header {
  padding: 0 28rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100rpx;
  margin-bottom: 10rpx;
}

.write-header-action {
  color: #969799;
  font-size: 40rpx;
}

.write-main {
  display: flex;
  flex: 1;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.write-main-field {
  display: flex;
  margin-bottom: 36rpx;
  max-height: 600rpx;
  flex-direction: column;
  width: 100%;
}

.write-main-text {
  text-align: center;
  border-bottom: 4rpx solid #999;
  height: 80rpx;
}

.write-main-desc {
  font-size: 30rpx;
  color: #888;
  text-align: center;
  margin-top: 14rpx;
}

.write-auth-item {
  margin: 20rpx 0;
}

.write-footer {
  display: flex;
  flex-direction: column;
  margin-top: 10rpx;
}

.write-footer-action {
  color: #ffffff!important;
  border-radius: 10rpx!important;
  width: 100%!important;
  font-size: 40rpx!important;
}