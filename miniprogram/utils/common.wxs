var datetime = function() {
  var now = getDate()
  var month = now.getMonth() + 1
  var date = now.getDate()
  var hour = now.getHours()
  var minute = now.getMinutes()
  var second = now.getSeconds()

  return month + ' 月 ' + date + ' 日 ' + hour + ':' + minute + ':' + second
}

var date = function() {
  var now = getDate()
  var month = now.getMonth() + 1
  var date = now.getDate()

  return month + ' 月 ' + date + ' 日 '
}

var min2duration = function(min) {
  var hour = min / 60
  var minute = min % 60

  return !!hour ? Math.floor(hour) + ' 小时 ' + Math.floor(minute) + ' 分 ' : Math.floor(minute) + ' 分钟 '
}

module.exports = {
  datetime: datetime,
  date: date,
  min2duration: min2duration
}